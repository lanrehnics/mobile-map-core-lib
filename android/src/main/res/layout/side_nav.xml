<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="29dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|end"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded">

            <ImageButton
                android:id="@+id/btn_close_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:contentDescription="@string/close_drawer"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tripFilterLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Map markers"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/status_positioned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="Positioned"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/status_inpremise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="In premise"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/status_loaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="Loaded"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/status_transporting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="Transporting"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/status_at_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="At destination"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/status_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:buttonTint="@color/green"
                android:text="Available trucks"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/active_trips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="Active trips"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/flagged_trips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="Flagged trips"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/customers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="Customers"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/stations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:buttonTint="@color/green"
                android:text="Stations"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/green"
            android:text="Apply"
            android:textColor="@color/colorWhite" />


    </LinearLayout>

</com.google.android.material.navigation.NavigationView>