<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@android:color/white" android:state_checked="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/colorBorder" />
            <corners android:radius="5dip" />
        </shape>
    </item>
    <item android:drawable="@color/colorDividerGrey" android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/colorBorder" />
            <corners android:radius="5dip" />
        </shape>
    </item>
    <item android:drawable="@color/colorSwitchNotSelected">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/colorBorder" />
            <corners android:radius="5dip" />
        </shape>
    </item>
</selector>